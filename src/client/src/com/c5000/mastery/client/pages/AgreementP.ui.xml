<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:v='urn:import:com.c5000.mastery.client.views'>
    <ui:style>
        .languageSelection {
            margin: 6px 6px 0 0;
        }

        .agree {
            width: 100%;
            height: 50px;
            margin-top: 20px;
            font-size: 10pt;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:ListBox ui:field="languageSelection" styleName="floatRight {style.languageSelection}"/>
        <v:TermsOfServiceV ui:field="tos"/>
        <g:Button ui:field="agree" styleName="{style.agree}"/>
    </g:HTMLPanel>
</ui:UiBinder>