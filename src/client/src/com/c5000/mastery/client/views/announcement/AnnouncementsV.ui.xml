<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

        .caption {
            font-size: 12pt;
            font-weight: bold;
            margin-bottom: 6px;
        }

    </ui:style>
    <g:HTMLPanel>
        <div class="{style.caption}">Announcement:</div>
        <g:HTMLPanel ui:field="shown"/>
    </g:HTMLPanel>
</ui:UiBinder> 