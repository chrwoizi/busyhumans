<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.c5000.mastery.client.components.picture'>
    <ui:style>

        .outer {
            width: 100%;
            margin-bottom: 6px;
        }

        .inner {
            position: relative;
            width: 100%;
            max-width: 400px;
        }

        .image {
            max-width: 400px;
        }

        .delete {
            position: absolute;
            top: 0;
            right: 0;
        }

    </ui:style>
    <g:HTMLPanel ui:field="outer" styleName="{style.outer}">
        <g:HTMLPanel styleName="{style.inner}">
            <p:PictureV ui:field="image" styleName="{style.image}"/>
            <g:Button ui:field="deleteButton" styleName="button {style.delete}" text="X"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>