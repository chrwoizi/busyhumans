<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

        .text {
            font-size: 10pt;
            margin: 4px 4px 10px 4px;
            white-space: normal;
        }

        .close {
            width: 100%;
            height: 30px;
        }

    </ui:style>
    <g:HTMLPanel>
        <g:Label ui:field="text" styleName="{style.text}"/>
        <g:Button ui:field="close" styleName="button {style.close}" text="OK"/>
    </g:HTMLPanel>
</ui:UiBinder> 