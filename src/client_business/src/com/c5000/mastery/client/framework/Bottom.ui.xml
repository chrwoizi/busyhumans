<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        @eval height com.c5000.mastery.client.framework.Bottom.HEIGHT_CSS;
        @eval borderWidth com.c5000.mastery.client.framework.Bottom.BORDER_CSS;
        .outer {
            height: height;
            background-color: #E8E8E8;
            border-top: borderWidth solid #CCC;
        }

        .link {
            margin: 16px 26px 0 0;
        }

        .link > a {
            color: #AAA;
            font-size: 10pt;
            text-decoration: none;
            font-weight: bold;
        }

    </ui:style>
    <g:HTMLPanel styleName="stopFloat {style.outer}">
        <g:Hyperlink styleName="floatRight {style.link}" targetHistoryToken="imprint" text="Contact"/>
        <g:Hyperlink styleName="floatRight {style.link}" targetHistoryToken="legal" text="Terms of Usage"/>
    </g:HTMLPanel>
</ui:UiBinder>