<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        .outer {
            position: relative;
            width: 100%;
            margin-bottom: 6px;
            max-width: 400px;
        }

        .text {
            width: 100%;
            overflow: hidden;
        }

        .delete {
            position: absolute;
            top: 0;
            right: 0;
        }

    </ui:style>
    <g:HTMLPanel ui:field="outer" styleName="{style.outer}">
        <g:HTMLPanel styleName="{style.outer}">
            <p ui:field="text" class="{style.text}"/>
            <g:Button ui:field="deleteButton" styleName="button {style.delete}" text="X"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>